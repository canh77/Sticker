<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:background="@color/teal_700"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textAllCaps="true"
        android:fontFamily="@font/roboto_medium_numbers"
        android:paddingStart="@dimen/_10sdp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />
    <ImageView
        android:clickable="false"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="@dimen/_14sdp"
        android:src="@drawable/ic_search_home" />
    <ImageView
        android:clickable="false"
        android:id="@+id/ivSearch"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_search_home" />

    <ImageView
        android:clickable="false"
        android:id="@+id/ivSettingSticker"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_setting_home" />

    <ImageView
        android:clickable="false"
        android:id="@+id/ivInfoSticker"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_info_more" />

</LinearLayout>