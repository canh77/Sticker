<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/_20sdp"
    android:paddingTop="@dimen/_6sdp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_14sdp"
        android:paddingTop="@dimen/_6sdp"
        android:background="@drawable/bg_login_registration"
        android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAvatarRegister"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/ic_add_image"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"/>

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_1sdp"
            android:src="@drawable/ic_close" />
    </FrameLayout>

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edt_email"
            android:hint="User name"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginTop="@dimen/_16sdp"
            android:paddingStart="@dimen/_8sdp"
            android:layout_height="@dimen/_40sdp"/>

        <TextView
            android:id="@+id/tvNumberCharacter"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginVertical="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:text="0/30"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tvBirthday"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edt_email"
            android:text="Birthday"
            android:lines="1"
            android:layout_gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingStart="@dimen/_8sdp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtEmailRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/bg_edt_email"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLines="1"
            android:paddingVertical="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp" />
<!--        <EditText-->
<!--            android:id="@+id/edtPasswordRegister"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_40sdp"-->
<!--            android:layout_marginTop="@dimen/_16sdp"-->
<!--            android:background="@drawable/bg_edt_email"-->
<!--            android:hint="Password"-->
<!--            android:inputType="textEmailAddress"-->
<!--            android:lines="1"-->
<!--            android:maxLines="1"-->
<!--            android:paddingVertical="@dimen/_8sdp"-->
<!--            android:paddingStart="@dimen/_8sdp" />-->



        <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginVertical="@dimen/_16sdp"
        android:background="@drawable/bg_edt_email"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:lines="1"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:paddingStart="@dimen/_8sdp"
            android:hint="Password"
            android:background="@null"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:text="Register"
        android:layout_marginVertical="@dimen/_14sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/roboto_medium_numbers"
        android:background="@drawable/bg_register_whatsapp"
        android:layout_height="@dimen/_30sdp"/>


        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:text="Buy continuing, you agree to our"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvServiceAndPrivacy"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:text="@string/txt_buy_continue_you_agree"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>