<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/_20sdp"
    android:paddingHorizontal="@dimen/_14sdp"
    android:paddingTop="@dimen/_6sdp"
    android:elevation="@dimen/_10sdp"
    android:background="@drawable/bg_login_registration"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/txt_log_out"
        android:layout_gravity="center"
        android:gravity="start"
        android:layout_marginTop="@dimen/_6sdp"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium_numbers"
        android:layout_height="match_parent"/>


    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="start"
        android:layout_marginVertical="@dimen/_10sdp"
        android:textSize="@dimen/_11ssp"
        android:text="@string/txt_are_you_sure_you_want_to_log_out"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/btnNo"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="@dimen/_4sdp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textColor="@color/color_text"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:text="@string/txt_no"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/btnYes"
            android:layout_width="match_parent"
            android:textColor="@color/color_text"
            android:textSize="@dimen/_10ssp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:paddingVertical="@dimen/_4sdp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/txt_yes"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>